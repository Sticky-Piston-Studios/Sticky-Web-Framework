{
  "Components":
  [
    {
      "Name": "swp-database",
      "Type": "Database",
      "Create": true,
      "ContainerConfig":
      {
        "ImageName": "mongo:latest",
        "DockerfilePath": "",
        "DomainSubPath": "/sticky-web-platform/database",
        "ContainerNetworkName": "swp-net",
        "PortsMapping": [["27017", "27017"]],
        "VolumeMappings": [["./database/volume", "/data/db"]],
        "EnvironmentVariables": [
          ["MONGO_INITDB_ROOT_USERNAME", "root"],
          ["MONGO_INITDB_ROOT_PASSWORD", "root"]
        ]
      },
      "DatabaseConnectionString": "mongodb://root:root@swp-database:27017",
      "Databases": [
        {
          "Name": "Main",
          "Collections": [
            {
              "Name": "Companies",
              "InitialData": "./database/InitialData/Companies.js",
              "Models": [
                {
                  "Name": "Company",
                  "Fields": [
                    {
                      "Name": "Id",
                      "Type": "Id"
                    },
                    {
                      "Name": "Name",
                      "Type": "String"
                    },
                    {
                      "Name": "RestaurantIds",
                      "Type": "List<Id>"
                    },
                    {
                      "Name": "Value",
                      "Type": "Int"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "Name": "swp-backend",
      "Type": "Backend",
      "Create": true,
      "ContainerConfig":
      {
        "ImageName": "",
        "DockerfilePath": "./components/backend/Dockerfile",
        "DomainSubPath": "/sticky-web-platform/backend",
        "ContainerNetworkName": "swp-net",
        "PortsMapping": [["4000", "4000"]],
        "VolumeMappings": [["./configuration.json", "/configuration.json:ro"]],
        "EnvironmentVariables": [
          ["ASPNETCORE_URLS", "http://+:4000"],
          ["ASPNETCORE_ENVIRONMENT", "${BACKEND_MODE}"]
        ]
      },
      "EndpointGroups": [
        {
          "Name": "Companies",
          "Path": "/api/companies",
          "Endpoints": [
            {
              "Name": "GetCompany",
              "Method": "GET",
              "Subroute": "id",
              "RqBodyName": "GetCompany",
              "Action": {
                "Type": "Default",
                "DatabaseName": "Main",
                "DatabaseCollectionName": "Companies"
              }
            },
            {
              "Name": "GetCompanies",
              "Method": "GET",
              "BodyName": "GetCompany",
              "Action": {
                "Type": "Default",
                "DatabaseName": "Main",
                "DatabaseCollectionName": "Companies"
              }
            },
            {
              "Name": "AddCompany",
              "Method": "POST",
              "BodyName": "AddCompany",
              "Action": {
                "Type": "Default",
                "DatabaseName": "Main",
                "DatabaseCollectionName": "Companies"
              }
            },
            {
              "Name": "DeleteCompany",
              "Method": "DELETE",
              "Subroute": "id",
              "Action": {
                "Type": "Default",
                "DatabaseName": "Main",
                "DatabaseCollectionName": "Companies"
              }
            }
          ]
        }
      ],
      "EndpointBodies": [
        {
          "Name": "GetCompany",
          "Fields": [
            {
              "Name": "Name",
              "Type": "String"
            },
            {
              "Name": "RestaurantIds",
              "Type": "List<Id>"
            },
            {
              "Name": "Value",
              "Type": "Int"
            },
            {
              "Name": "EmployeeCount",
              "Type": "Int"
            }
          ]
        },
        {
          "Name": "AddCompany",
          "Fields": [
            {
              "Name": "Name",
              "Type": "String"
            },
            {
              "Name": "EmployeeCount",
              "Type": "Int"
            }
          ]
        }
      ]
    },
    {
      "Name": "swp-frontend",
      "Type": "Frontend",
      "Create": true,
      "ContainerConfig":
      {
        "ImageName": "",
        "DockerfilePath": "./components/frontend/Dockerfile",
        "DomainSubPath": "/sticky-web-platform/frontend",
        "ContainerNetworkName": "swp-net",
        "PortsMapping": [["3000", "3000"]],
        "VolumeMappings": [["./configuration.json", "/configuration.json:ro"]],
        "EnvironmentVariables": [
          ["NEXT_TELEMETRY_DISABLED", "1"],
          ["API_URL", "http://swp-backend:4000"],
          ["NEXT_PUBLIC_API_URL", "http://localhost:3000"]
        ]
      }
    },
    {
      "Name": "swp-web-server",
      "Type": "WebServer",
      "Create": true,
      "ContainerConfig":
      {
        "ImageName": "",
        "DockerfilePath": "./components/web_server/Dockerfile",

        "DomainSubPath": "/sticky-web-platform/web-server",
        "ContainerNetworkName": "swp-net",
        "ContainerAddress": [
          ["80", "80"], 
          ["443", "443"] 
        ],
        "VolumeMappings": [["./web_server", "/etc/nginx"]],
        "EnvironmentVariables": {}
      },
      "ConfigExtensionFilePath": "./component/web_server/nginx_config_extension.conf"
    }
  ],
  "ContainerNetworkNames": ["swp-net"]
}